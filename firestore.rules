rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Properties collection - public read, admin write only
    match /properties/{propertyId} {
      allow read: if true; // الجميع يمكنهم القراءة
      allow create, update, delete: if false; // فقط من خلال Admin SDK
    }
    
    // Projects collection - public read, admin write only
    match /projects/{projectId} {
      allow read: if true; // الجميع يمكنهم القراءة
      allow create, update, delete: if false; // فقط من خلال Admin SDK
      
      // Plots subcollection
      match /plots/{plotId} {
        allow read: if true; // الجميع يمكنهم القراءة
        allow create, update, delete: if false; // فقط من خلال Admin SDK
      }
    }
    
    // Contact messages - admin only (via Admin SDK)
    match /contact_messages/{messageId} {
      allow read, write: if false; // فقط من خلال Admin SDK
    }
    
    // Evaluation requests - admin only (via Admin SDK)
    match /evaluation_requests/{requestId} {
      allow read, write: if false; // فقط من خلال Admin SDK
    }
    
    // Default rule for all other documents - public read, admin write only
    match /{document=**} {
      allow read: if true;
      allow write: if false; // Admin SDK only
    }
  }
}



